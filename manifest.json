{
    "name": "Smash Mini Calendar",
    "version": "0.0.1.3",
    "description": "Bookmark smash.gg events for future use.",
    "background": {
        "scripts": ["js/axios.js","js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "cal-logo.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://smash.gg/tournament/*",
                "https://smash.gg/tournament/*",
                "https://smash.gg/league/*",
                "http://smash.gg/league/*"
            ],
            "js": ["js/content.js"],
            "css": ["css/content.css", "css/balloon.css"],
            "run_at": "document_end"
        }
    ],

    "icons": {
        "48": "cal-logo.png",
        "96": "cal-logo.png"
    },

    "permissions":[
        "contextMenus", 
        "storage",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "tabs",
        "notifications",
        "https://smash.gg/tournament/*",
        "http://smash.gg/tournament/*",
        "https://smash.gg/league/*",
        "http://smash.gg/league/*"
    ],
    "web_accessible_resources": [
        "*.png"
      ],
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}